#include <iostream>
using namespace std;
int main()
{
	int n,i,j,k;
	cin>>n;
	for(i=1;i<=n;i++)
	{
		k=n-i+1;
		for(j=1;j<=k;j++)
		{
			if(j<k)
				cout<<(char)(i+64)<<" ";
			else
				cout<<(char)(i+64);
		}
		if(i<n)
			cout<<"\n";
	}
	return 0;
}
