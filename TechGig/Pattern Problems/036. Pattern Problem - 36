#include <iostream>
using namespace std;
int main()
{
	int n,i,j,k=1;
	cin>>n;
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n-i;j++)
			cout<<"  ";
		for(j=1;j<2*i;j++)
		{
			if(j<2*i-1)
				cout<<k<<" ";
			else
				cout<<k;
		}
		if(i<n)
			cout<<"\n";
		k+=2;
	}
	return 0;
}
