#include <iostream>
using namespace std;
int main()
{
	int n,i,j,k;
	cin>>n;
	for(i=1;i<=n;i++)
	{
		k=n-i+1;
		for(j=1;j<i;j++)
			cout<<"  ";
		for(j=1;j<=k;j++)
		{
			if(j<k)
				cout<<"*"<<" ";
			else
				cout<<"*";
		}
		if(i<n)
			cout<<"\n";
	}
	return 0;
}
