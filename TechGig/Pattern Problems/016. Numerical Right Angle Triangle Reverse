#include <iostream>
using namespace std;
int main()
{
	int n,i,j;
	cin>>n;
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=n-i+1;j++)
		{
			if(j<n-i+1)
				cout<<i<<" ";
			else
				cout<<i;
		}
		if(i<n)
			cout<<"\n";
	}
	return 0;
}
