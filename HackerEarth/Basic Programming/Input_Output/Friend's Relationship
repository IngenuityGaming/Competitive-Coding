#include <stdio.h>
int main(){
	int t,n,m,i,j,k,a;
	scanf("%d", &t);              		
	for(a=0;a<t;a++)
	{
	    scanf("%d",&n);
	    m=n-1;
	    for(i=1;i<=n;i++)
	    {
	        for(j=1;j<=i;j++)
	        {
	            printf("*");
	        }
	        for(k=1;k<=2*m;k++)
	        {
	            printf("#");
	        }
	        m=m-1;
	        for(j=1;j<=i;j++)
	        {
	            printf("*");
	        }
	        printf("\n");
	    }
	    printf("\n\n");
	}
}
